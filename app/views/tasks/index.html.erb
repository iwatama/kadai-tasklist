<h1>taskList</h1>
<ul>
    
    <table class = "table table-striped">
        <thead></thead>
        <tr>
            <th>id</th>
            <th>title</th>
            <th>task</th>
        </tr>
        </thead>
        <tbody>
        <% @tasks.each do |task| %>
            <tr>
                <td><%= link_to task.id, task %></td>
                <td><%= task.title %></td>
                <td><%= task.content %></td>
                <td><%= task.status %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</ul>
<div>
<%= paginate @tasks %>
</div>

<%= link_to '新規taskの作成', new_task_path, class:"btn btn-primary" %>


