<ul class="media-list">

    <% @tasks.each do |task| %>
        <% user = task.user %>
        <li class="media">
            <div class="media-left">
                <img class="media-object img-rounded" src="<%= gravatar_url(current_user, options = { size: 50 }) %>" alt="">
            </div>
            
            
            <div class="media-body">
                <div>
                    <%= link_to user.name, user_path(user) %> <span class="text-muted">posted at <%= task.created_at %></span>
                </div>
                <div>
                    <p>idï¼š<%= task.id %></p>
                    <div>
                        <table class="table table-striped table-bordered" >
                            <tr><th width="20%">title</th><td><%= task.title %></td></tr>
                            <tr><th>task</th><td><%= task.content %></td></tr>
                            <tr><th>status</th><td><%= task.status %></td></tr>
                        </table>
                    </div>
                </div>
                <div>
                    <% if current_user == task.user %>
                        <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
                    <% end %>
                </div>
            </div>
        </li>
    <% end %>
    <%= paginate tasks %>
</ul>