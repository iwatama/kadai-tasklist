<%= form_for(task) do |f| %>

    <% if task.errors.any? %>
    <div class = "alert alert-warning">
        <ul>
            <% task.errors.full_messages.each do |task| %>
                <li>
                    <%= task %>
                </li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <%= f.label :title, 'title' %><%= f.text_field :title, class:'form-control' %>
    <%= f.label :content, 'task' %><%= f.text_field :content , class:"form-control" %>
    
    <%= f.submit '登録はこちらをクリック' %>
 <% end %>
